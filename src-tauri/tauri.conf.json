{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kartrider-keyviewer-tauri",
  "identifier": "com.kartrider-keyviewer-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "카트라이더 키뷰어",
        "label": "keyviewer",
        "width": 800,
        "height": 600,
        "transparent": true,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "shadow": false,
        "acceptFirstMouse": true
      },
      {
        "title": "설정",
        "label": "settings",
        "url": "/#settings",
        "width": 500,
        "minWidth": 500,
        "maxWidth": 900,
        "height": 600,
        "minHeight": 600,
        "maxHeight": 900,
        "resizable": true,
        "maximizable": false,
        "create": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": { "../src/bundle-resources/": "./" },
    "windows": {
      "wix": { "language": "ko-KR" }
    }
  }
}
